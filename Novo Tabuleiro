int main(){
		
			initscr();
			start_color();
			init_pair(1,COLOR_RED,COLOR_BLACK);
			attron(COLOR_PAIR(1));
			mvprintw(15,25,"DESEJA INICIAR? APERTE QUALQUER TECLA");
			attroff(COLOR_PAIR(1));
			refresh();			
			getch();			
			noecho();	
			endwin();
	fazer_campo();
	return 0;
}
